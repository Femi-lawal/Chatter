<div class="row">
  <% if account_signed_in? %>
    <% provide(:title, 'Home') %>

    <aside class="col-md-4">
      <section>
        <%= render 'shared/account_info' if account_signed_in? %>
      </section>
    </aside>
    <div class="col-md-8">
      <div class="timeline">
        <h2 class="title">Chaats</h2>
        <% if @feed_items.any? %>
        <ol class="chaats">
          <%= render partial: 'shared/feed_item', collection: @feed_items %>
          <div class="paginate">
            <%= will_paginate @feed_items, renderer: BootstrapPagination::Rails %>
          </div>
        </ol>
        <% end %>
      </div>
    </div>
  <% else %>
    <% provide(:title, 'Welcome') %>

    <div class="col-md-6 col-md-offset-3 one-col">
      <h1>Welcome to Chatter </h1>
      <p> See whatâ€™s happening in the world right now</p>
      <%= link_to 'Sign up', new_account_registration_path, class: "btn btn-primary" %>
      <%= link_to 'Log in', new_account_session_path, class: "btn btn-default" %>
    </div>
  <% end %>
</div>
