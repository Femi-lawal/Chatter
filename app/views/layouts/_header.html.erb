<div class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <%= link_to "Chatter ", root_path, class: "navbar-brand"  %>
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span> 
        <span class="icon-bar"></span>
      </button>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right header-menu">
        <% if account_signed_in? %>
          <li>
            <%= link_to accounts_path do %>
              <%= icon("accounts") %>
              <span>Accounts</span>
            <% end %>
          </li>
          <li>
            <%= link_to account_path(current_account) do %>
              <%= icon("account") %>
              <span>Profile</span>
            <% end %>
          </li>
          <li>
            <%= link_to chaats_path do %>
              <%= icon("comment") %>
              <span>Chaats</span>
            <% end %>
          </li>
          <li>
            <%= link_to edit_account_path(current_account) do %>
              <%= icon("cog") %>
              <span>Setting</span>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_account_session_path, method: "delete" do %>
              <%= icon("sign-out") %>
              <span>Log out</span>
            <% end %>
          </li>
        <% else %>
          <% unless params[:controller] == 'static_pages' %> 
            <li>
              <%= link_to accounts_path do %>
                <%= icon("accounts") %>
                <span>Accounts</span>
              <% end %>
            </li>
            <li>
              <%= link_to chaats_path do %>
                <%= icon("comment") %>
                <span>Chaats</span>
              <% end %>
            </li>
            <li>
              <%= link_to new_account_session_path do %>
                <%= icon("sign-in") %>
                <span>Sign in</span>
              <% end %>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
